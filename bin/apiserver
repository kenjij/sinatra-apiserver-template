#!/usr/bin/env ruby
require 'kajiki'
require 'apiserver'


opts = Kajiki.preset_options(:server, {config: true})

Kajiki.run(opts) do |cmd|
  case cmd
  when 'start'
    Rack::Server.start({
      app: APIServer::Server.new(opts), 
      Host: opts[:address], 
      Port: opts[:port]
    })
  end
end
